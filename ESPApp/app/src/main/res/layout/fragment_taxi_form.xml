<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="?android:dividerHorizontal"
    android:showDividers="middle"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/taxifragment"
    android:background="#2196F3"
    tools:context="com.tns.espapp.fragment.TaxiFormFragment">

    <!-- TODO: Update blank fragment layout -->

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="0px"
    android:layout_weight="1">

    <android.support.v7.widget.CardView


        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#fff"
        app:cardElevation="4dp"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/fullscreen_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taxi Form"
                    android:textColor="#33b5e5"
                    android:textSize="24sp"
                   />
                <ImageView
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/taxi_icon2"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    />

            </LinearLayout>





            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Form No:  "
                    android:id="@+id/fromNumberTextView"
                    android:textColor="#33b5e5"
                    android:textSize="20sp"
                     />
                <TextView
                   android:id="@+id/tv_form_no"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#33b5e5"
                    android:textSize="14sp"
                  />


            </LinearLayout>

            <TextView
                android:textColor="@color/black"
                android:padding="5dp"
                android:text="Date"
                android:id="@+id/dateTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />



                <EditText
                    android:id="@+id/edt_settaxiform_date"
                    android:focusable="false"
                    android:padding="5dp"
                    android:hint="SelectDate"
                    android:background="@drawable/edt_border"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />


            <TextView
                android:textColor="@color/black"
                android:padding="5dp"
                android:id="@+id/projectTypeTextView"
                android:text="Project Type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <EditText

                android:singleLine="true"
                android:imeOptions="actionNext"
                android:id="@+id/edt_project_type"
                android:padding="5dp"
                android:background="@drawable/edt_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/black"
                android:padding="5dp"
                android:id="@+id/vehicleNumberTextView"
                android:text="Vehicle No"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:id="@+id/edt_vehicle_no"
                android:padding="5dp"
                android:background="@drawable/edt_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/black"
                android:padding="5dp"
                android:text="Start KM"
                android:id="@+id/startKmTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:layout_weight="8"
                    android:id="@+id/edt_startkm_text"
                    android:padding="5dp"
                    android:background="@drawable/edt_border"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


                <EditText
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:id="@+id/edt_startkm_image"
                    android:drawableRight="@android:drawable/ic_menu_camera"
                    android:focusable="false"
                    android:padding="1dp"
                    android:background="@drawable/edt_border"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>




            <TextView
                android:textColor="@color/black"
                android:padding="5dp"
                android:text="End KM"
                android:id="@+id/endKmTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:imeOptions="actionDone"
                android:inputType="number"
                android:layout_weight="8"
                android:id="@+id/edt_endkmtext"
                android:padding="5dp"
                android:background="@drawable/edt_border"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_weight="1"
                android:singleLine="true"
                android:id="@+id/edt_endkm_image"
                android:drawableRight="@android:drawable/ic_menu_camera"
                android:focusable="false"
                android:padding="1dp"
                android:background="@drawable/edt_border"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            </LinearLayout>



            <TextView
                android:textColor="@color/black"
                android:padding="5dp"
                android:id="@+id/numberOfSitesTextView"
                android:text="No of Sites"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:inputType="number"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:id="@+id/edt_siteno"
                android:padding="5dp"
                android:background="@drawable/edt_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/black"
                android:padding="5dp"
                android:text="Remark"
                android:id="@+id/remarksTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <EditText

                android:lines="5"
                android:imeOptions="actionDone"
                android:id="@+id/edt_remark"
                android:padding="5dp"
                android:background="@drawable/edt_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/btn_close_taxiform"
                android:layout_marginBottom="1dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:text="Close"
                android:background="@drawable/button_bg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />




        </LinearLayout>

    </android.support.v7.widget.CardView>

</ScrollView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        style="?android:buttonBarStyle">

        <Button
            android:id="@+id/sendButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="20dp"
            style="?android:attr/buttonBarButtonStyle"/>

    </LinearLayout>


</LinearLayout>
