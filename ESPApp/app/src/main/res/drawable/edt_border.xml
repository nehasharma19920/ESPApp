<?xml version="1.0" encoding="utf-8"?>
<inset android:insetBottom="2px" xmlns:android="http://schemas.android.com/apk/res/android">
    <selector>
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <corners  android:topLeftRadius="4dip"
                    android:topRightRadius="4dip"
                    android:bottomLeftRadius="0dip"
                    android:bottomRightRadius="0dip" />
                <gradient android:startColor="#FF058bf5" android:endColor="#FF015ee6" android:angle="270" />
                <stroke android:width="4px" android:color="@color/black" />
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <corners  android:topLeftRadius="1dip"
                    android:topRightRadius="1dip"
                    android:bottomLeftRadius="1dip"
                    android:bottomRightRadius="1dip" />
                <solid android:color="#E8E8E8" />
                <stroke android:width="1px" android:color="@color/black" />
            </shape>
        </item>
    </selector>
</inset>